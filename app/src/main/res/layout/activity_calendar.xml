             android:textSize="20sp" />
         <Button 
             android:id="@+id/yearadd"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:onClick="yearChange1"
             android:text="+"/>  
         <Button 
             android:id="@+id/yearcut"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:onClick="yearChange2"
             android:text="-"/>     
    </LinearLayout>
    
