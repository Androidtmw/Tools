<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ecd5d5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ed67e4ea">
        <Button
            android:id="@+id/button_city_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ed67e4ea"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:drawableRight="@drawable/icon_title_down_arrow"
            android:padding="5dp"
            android:text="北京"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/button_city_choose"
            android:text="天气预报"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_weather_tips"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/lv_weather"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"/>

</LinearLayout>